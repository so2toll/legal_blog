                  <span>Settings</span>
                  <i class="ri-arrow-down-s-line ms-auto"></i>
              </a>
              <ul class="collapse submenu" id="settingsMenu">
                  <li><a href="/settings/admin">General Settings</a></li>
                  <li><a href="/profile/admin">Preferences</a></li>
                
              
              </ul>
          </li>
      </ul>
  </div>
  
  <!-- Sidebar Footer -->
  <div class="sidebar-footer">
      <div class="d-flex justify-content-between align-items-center">
          <a href="/settings/profile" class="d-flex align-items-center w-100" title="User Profile">
              <div class="avatar avatar-sm me-3">
                  <img src="/assets/img/headshot_32x32.png" alt="User Avatar" class="rounded-circle">
              </div>
              <div class="user-info">
                  <span class="fw-medium">John Driver</span>
                  <small class="d-block text-muted">Driver</small>
