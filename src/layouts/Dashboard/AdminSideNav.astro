<div class="sidebar" id="sidebar" data-theme="light" style="background:#fecc180d">
  <!-- Sidebar Header with Logo -->
  <div class="sidebar-header">
      <div class="logo-container">
          <!-- Light Theme Logos -->
          <img src="/assets/img/logo-main.svg" alt="CarPool" class="logo-full logo-light" style="height:80px;">
          <img src="/assets/img/logo-icon.svg" alt="CarPool" class="logo-icon logo-light">
          
          <!-- Dark Theme Logos -->
          <img src="/assets/img/logo-white.svg" alt="CarPool" class="logo-full logo-dark">
          <img src="/assets/img/logo-icon-white.svg" alt="CarPool" class="logo-icon logo-dark">
      </div>
      <button class="btn d-md-none" id="close-sidebar">
          <i class="ri-close-line"></i>
      </button>
  </div>
  <!-- Driver Management - Onboarding, Documents, Ratings&Reviews, Vehicles, 
   Rides - requests, schedule, active rides, 
   Operations - Analytics, Reveue reports, Expense Tracking, Driver Payouts  -->
  <!-- Sidebar Menu -->
  <div class="sidebar-menu">
      <ul>
          <li>
              <a href="/dashboard/admin">
                  <i class="ri-dashboard-line"></i>
                  <span>Dashboard</span>
              </a>
          </li>

             <!-- Rides Section -->
             <li class="has-dropdown">
                <a href="#tripMenu" data-bs-toggle="collapse" aria-expanded="false" aria-controls="tripMenu">
                    <i class="ri-settings-5-line"></i>
                    <span>Trip Management</span>
                    <i class="ri-arrow-down-s-line ms-auto"></i>
                </a>
                <ul class="collapse submenu" id="tripMenu">
                    <li><a href="/operations/analytics">Real-time Monitoring</a></li>
                    <li><a href="/operations/analytics">Manage Rides</a></li>
                    <li><a href="/operations/fleet-management">Schedules</a></li>
                    <li><a href="/operations/rides">Activity Logs</a></li>
                    <li><a href="/operations/maps">Maps</a></li>
                </ul>
            </li>
    
          <!-- Driver Management Section -->
          <li class="has-dropdown">
              <a href="#driverMenu" data-bs-toggle="collapse">
                  <i class="ri-steering-line"></i>
                  <span>Driver Management</span>
                  <i class="ri-arrow-down-s-line ms-auto"></i>
              </a>
              <ul class="collapse" id="driverMenu">
                  <li><a href="/driver-management/driver-onboarding">Onboarding</a></li>
