---

<div class="sidebar" id="sidebar" data-theme="light" style="background:#fecc180d">
  <!-- Sidebar Header with Logo -->
  <div class="sidebar-header">
      <div class="logo-container">
          <!-- Light Theme Logos -->
          <img src="/assets/img/logo-icon.svg" alt="CarPool" class="logo-full logo-light" style="height:50px; padding-right:20px;"> Advocates
          <img src="/assets/img/logo-icon.svg" alt="CarPool" class="logo-icon logo-light">
          
          <!-- Dark Theme Logos -->
          <img src="/assets/img/logo-white.svg" alt="CarPool" class="logo-full logo-dark">
          <img src="/assets/img/logo-icon-white.svg" alt="CarPool" class="logo-icon logo-dark">
      </div>
      <button class="btn d-md-none" id="close-sidebar">
          <i class="ri-close-line"></i>
      </button>
  </div>
  
  <!-- Sidebar Menu -->
  <div class="sidebar-menu">
      <ul>
          <li>
              <a href="">
                  <i class="ri-dashboard-line"></i>
                  <span>Dashboard</span>
              </a>
          </li>
         
            <!-- Bookings Section -->
          <li>
            <a href="">
                <i class="ri-calendar-line"></i>
                <span>Victim Management</span>
            </a>
        </li>

         <!-- Rides Section -->
         <li>
            <a href="/support/">
                <i class="ri-steering-line"></i>
                <span>Support Console</span>
            </a>
        </li>

         <!-- Tracking Section -->
         <li>
            <a href="">
                <i class="ri-map-pin-line"></i>
                <span>Notifications</span>
            </a>
        </li>

         <!-- Activity Section -->
         <li>
            <a href="">
                <i class="ri-route-line"></i>
                <span>Activity</span>
            </a>
        </li>
    
        

          <!-- Settings Section -->
          <li class="has-dropdown">
              <a href="#settingsMenu" data-bs-toggle="collapse" aria-expanded="false" aria-controls="settingsMenu">
                  <i class="ri-settings-line"></i>
                  <span>Settings</span>
                  <i class="ri-arrow-down-s-line ms-auto"></i>
              </a>
              <ul class="collapse submenu" id="settingsMenu">
                  <li><a href="">General Settings</a></li>
                  <li><a href="">Profile</a></li>
              </ul>
          </li>
      </ul>
  </div>
  
  <!-- Sidebar Footer -->
  <div class="sidebar-footer">
   
      <div class="d-flex justify-content-between align-items-center" style="padding-left: 5%;">
        <a class="block py-1.5 px-6 hover:text-green-300 dark:hover:text-gray-300 hover:text-white hover:bg-gray-500" href="/logout">
            <!-- <Icon pack="ri" name="logout-box-line" class="inline-block h-4 w-4 ltr:mr-2 rtl:ml-2 bi bi-calendar4-week"  />  -->
            <i class="ri-route-line"></i>
            <span style="    margin-left: 25%;">Logout</span>
          </a>
    </div>
    <br/>
    <br/>
      <div class="d-flex justify-content-between align-items-center">
          <a href="" class="d-flex align-items-center w-100" title="User Profile">
              <div class="avatar avatar-sm me-3">
                  <img src="/assets/img/headshot_32x32.png" alt="User Avatar" class="rounded-circle">
                  
              </div>
              <div class="user-info">
                  <span class="fw-medium">John Doe</span>
                  <small class="d-block text-muted">Advocate</small>
              </div>
          </a>
      </div>
  </div>

</div>