<!-- Main Content -->
<div class="container-fluid py-4">
    <!-- Statistics Cards Row -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle text-muted">Scheduled Hours</h6>
                            <h2 class="card-title mb-0">42</h2>
                        </div>
                        <div class="stat-icon" style="background: #e8e4ce;">
                            <i class="ri-time-line" style="color: black;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle text-muted">Upcoming Rides</h6>
                            <h2 class="card-title mb-0">12</h2>
                        </div>
                        <div class="stat-icon" style="background: #e8e4ce;">
                            <i class="ri-calendar-line" style="color: black;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle text-muted">Completed Rides</h6>
                            <h2 class="card-title mb-0">28</h2>
                        </div>
                        <div class="stat-icon" style="background: #e8e4ce;">
                            <i class="ri-checkbox-circle-line" style="color: black;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle text-muted">Availability Rate</h6>
                            <h2 class="card-title mb-0">85%</h2>
                        </div>
                        <div class="stat-icon" style="background: #e8e4ce;">
                            <i class="ri-percent-line" style="color: black;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Weekly Schedule Calendar -->
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Weekly Schedule</h5>
            <div>
                <button class="btn btn-outline-primary me-2">
                    <i class="ri-arrow-left-s-line"></i>
                </button>
                <span class="fw-bold">June 12 - June 18, 2025</span>
                <button class="btn btn-outline-primary ms-2">
                    <i class="ri-arrow-right-s-line"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered schedule-table">
                    <thead>
                        <tr>
                            <th>Time</th>
                            <th>Monday</th>
                            <th>Tuesday</th>
                            <th>Wednesday</th>
                            <th>Thursday</th>
                            <th>Friday</th>
                            <th>Saturday</th>
                            <th>Sunday</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>6:00 AM</td>
                            <td class="bg-light"></td>
                            <td class="bg-light"></td>
                            <td class="bg-light"></td>
                            <td class="bg-light"></td>
                            <td class="bg-light"></td>
                            <td class="bg-light"></td>
                            <td class="bg-light"></td>
                        </tr>
                        <tr>
                            <td>7:00 AM</td>
