<!DOCTYPE html>
<html lang="en">
<head>
    
        <title>CarrGo - Ridesharing Taxi HTML Template</title>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="robots" content="follow, index"/>
        <meta name="description" content="CarrGo - Ridesharing Taxi HTML Template for building Ridesharing, Car-pooling and transportaion website">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.webp">
        <link rel="stylesheet" href="/plugins/bootstrap/css/bootstrap.min.css">
        <link rel="stylesheet" href="/plugins/animate/animate.css">
        <link rel="stylesheet" href="/plugins/swiper/swiper-bundle.min.css">
        <link rel="stylesheet" href="/icons/font-awesome/css/all.min.css">
        <link rel="stylesheet" href="/css/style.min.css">

</head>

  
        <!-- Ride Booking Partial -->
        <div class="ride-booking-section py-4">
            <div class="container">
              <div class="row g-4">
                <div class="col-lg-7">
                  <div class="booking-form-card">
                    <form action="#">
                      <!-- Destination Inputs -->
                      <div class="location-input">
                        <label for="inputFrom">From</label>
                        <div class="input-with-icon">
                          <i class="fas fa-map-marker-alt"></i>
                          <input type="text" name="frominputDestination" placeholder="Select Pickup" id="inputFrom" class="form-control">
                        </div>
                      </div>
              
                      <div class="location-input">
                        <label for="inputDestination">Where to?</label>
                        <div class="input-with-icon">
                          <i class="fas fa-map-marker-alt"></i>
                          <input type="text" name="destination" placeholder="Select Destination" id="inputDestination" class="form-control">
                        </div>
                      </div>
              
                      <!-- Payment Options -->
                      <div class="payment-section">
                        <h2>Payment Method</h2>
                        <div class="payment-options">
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="payment-opts" id="cash-pay" value="option1" checked>
                            <label class="form-check-label" for="cash-pay">Cash</label>
                          </div>
                  
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="payment-opts" id="banking-pay" value="option2">
                            <label class="form-check-label" for="banking-pay">Net Banking</label>
                          </div>
                  
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="payment-opts" id="card-pay" value="option3">
                            <label class="form-check-label" for="card-pay">Debit Card</label>
                          </div>
                        </div>
                      </div>
              
                      <!-- Car Selection -->
                      <div class="car-selection-section">
                        <h2>Selected Car</h2>
                        <div class="car-options">
                          <div class="car-option">
                            <input class="form-check-input" type="radio" name="car-opts" id="scooter" value="option1">
                            <label class="car-label vertical" for="scooter">
                              <div class="car-image">
                                <img src="/images/dashboard/car-1.webp" alt="Scooter">
                              </div>
                            </label>
                            <div class="car-details text-center mt-2">
                              <h5>1x</h5>
                              <p>Scooter</p>
                            </div>
                          </div>
                  
                          <div class="car-option">
                            <input class="form-check-input" type="radio" name="car-opts" id="alto" value="option2" checked>
                            <label class="car-label vertical" for="alto">
                              <div class="car-image">
                                <img src="/images/dashboard/car-2.webp" alt="Alto">
                              </div>
                            </label>
                            <div class="car-details text-center mt-2">
                              <h4>2x</h4>
                              <p>Alto</p>
                            </div>
                          </div>
                  
                          <div class="car-option">
                            <input class="form-check-input" type="radio" name="car-opts" id="swift" value="option3">
                            <label class="car-label vertical" for="swift">
                              <div class="car-image">
                                <img src="/images/dashboard/car-3.webp" alt="Swift dzire">
                              </div>
                            </label>
                            <div class="car-details text-center mt-2">
                              <h4>3x</h4>
                              <p>Swift dzire</p>
                            </div>
                          </div>
                  
                          <div class="car-option">
                            <input class="form-check-input" type="radio" name="car-opts" id="luxury" value="option4">
                            <label class="car-label vertical" for="luxury">
                              <div class="car-image">
                                <img src="/images/dashboard/car-4.webp" alt="Luxury">
                              </div>
                            </label>
                            <div class="car-details text-center mt-2">
                              <h4>4x</h4>
                              <p>Luxury</p>
                            </div>
                          </div>
                  
                          <div class="car-option">
                            <input class="form-check-input" type="radio" name="car-opts" id="tourist" value="option5">
                            <label class="car-label vertical" for="tourist">
                              <div class="car-image">
                                <img src="/images/dashboard/car-5.webp" alt="Tourist">
                              </div>
                            </label>
                            <div class="car-details text-center mt-2">
                              <h4>5x</h4>
                              <p>Tourist</p>
                            </div>
                          </div>
                        </div>
                      </div>
              
                      <button type="submit" class="book-now-btn">Book Now</button>
                    </form>
                  </div>
                </div>
        
                <div class="col-lg-5">
                  <div class="ride-map-area">
                    <div class="mapouter">
                      <div class="gmap_canvas">
                        <iframe id="gmap_canvas" src="https://maps.google.com/maps?q=2880%20Broadway,%20New%20York&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
    
   
  
</html>
